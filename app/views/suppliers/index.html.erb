<div class="row">
  <div class="col-md-12">
    <div>
      <h3>取引先一覧</h3>
    </div>

    <div class="bs-component">
      <%= link_to '新規登録', new_supplier_path %>

      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>名称</th>
            <th width=200>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @suppliers.each do |supplier| %>
            <tr>
              <td><%= supplier.name %></td>
              <td>
                <%= link_to '編集', edit_supplier_path(supplier) %>
                |
                <%= link_to '削除', supplier, method: :delete, data: { confirm: '本当に削除してもよろしいですか?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div>
        全 <%= @suppliers.total_count %> 件<br />
        <%= paginate @suppliers %>
      </div>
      <div>
        <%#= link_to 'Create PDF document', suppliers_path(:format => :pdf), target: :blank %>
      </div>
    </div>
  </div>
</div>
